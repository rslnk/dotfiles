	c = commit
	cm = commit -m
	cma = commit -a

	pick = cherry-pick
	type = cat-file -t
	dump = cat-file -p

	pr = pull-request

	lg = log --pretty=format:'%C(auto) %h %ad | \"%s\"%d%C(blue) â˜º %an' --graph --date=short

